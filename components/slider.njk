{% macro Slider(
  class,
  rowGap = "1.09rem",
  columnGap = "1.09rem",
  columnSize = "max(300px, 83vw)",
  desktopColumnSize = "28ch",
  attributes
) %}
  <div
    {{ attributes }}
    class="Slider {{ class }}"
    style="
      --rGap: {{ rowGap }};
      --cGap: {{ columnGap }};
      --columnSize: {{ columnSize }};
      --desktopColumnSize: {{ desktopColumnSize }}
    "
  >
    {{ caller() }}
  </div>
{% endmacro %}
