{% macro Grid(
  columnGap = "1.45rem",
  rowGap = "1.45rem",
  columns = 3,
  inline = false,
  verticalAlign = "unset",
  horizontalAlign = "unset",
  class,
  attributes
) %}
  <div
    {{ attributes }}
    class="Grid {{ class }}"
    data-grid-inline="{{ inline }}"
    style="
      --columnGap: {{ columnGap }};
      --rowGap: {{ rowGap }};
      --columns: {{ columns }};
      --vAlign: {{ verticalAlign }};
      --hAlign: {{ horizontalAlign }};
    "
  >
    {{ caller() }}
  </div>
{% endmacro %}
