{% from "stack.njk" import Stack %}
{% from "container.njk" import Container %}
{% from "slider.njk" import Slider %}
{% from "portfolio-card.njk" import PortfolioCard %}

{% call Stack(columns=1, rowGap="4.72rem") -%}
  {% call Container() -%}
    {% call Stack(columns=1, rowGap="1.09rem") -%}
      {% if title %}
        <h1>{{ title }}</h1>
      {% endif %}
      {% call Stack(inline=true, columns=1, horizontalAlign="start") -%}
        <div>
          {% call Stack(columns=2, columnGap="4rem", rowGap="1.81rem", verticalAlign="start") -%}
            {% call Stack(columns=1, rowGap="1.81rem") -%}
              <p data-width="small">I’m Mattia Astorino. As UX Engineer I build web interfaces, components library and design systems with a special love to CSS.</p>
              <p data-width="small">I’m also an open-source developer, and in my spare time I do photography and digital art with my iPad Pro.</p>
            {% endcall %}
            <div>
              {% include "socials.njk" %}
            </div>
          {% endcall %}
        </div>
      {% endcall %}
    {% endcall %}
  {% endcall %}

  {% call Stack(columns=1, rowGap="0.72rem") -%}
    {% call Container() -%}
      <h2>Porfolio</h2>
    {% endcall %}
    {% call Slider() -%}
      {% for item in portfolio %}
        {{ PortfolioCard(
          label=item.label,
          title=item.title,
          text=item.text,
          url=item.url,
          color1=item.color1,
          color2=item.color2
        )}}
      {% endfor %}
    {% endcall %}
  {% endcall %}


  {% call Stack(columns=1, rowGap="0.72rem") -%}
    {% call Container() -%}
      <h2>Writing</h2>
    {% endcall %}
    {% call Slider() -%}

    {% endcall %}
  {% endcall %}
{% endcall %}
