---
import styles from "./cursor.module.css";
---

<svg
  class={styles.Cursor}
  data-cursor
  width="64"
  height="64"
  viewBox="0 0 65 65"
  fill="none"
  aria-hidden="true"
  xmlns="http://www.w3.org/2000/svg"
>
  <circle cx="32.5" cy="32.5" r="32.5" fill="#BBC4D2" opacity="0.2"></circle>
  <path
    opacity="0.5"
    class={styles.Line}
    d="M19 19L46 46"
    stroke="var(--global-foreground)"></path>
  <path
    opacity="0.5"
    class={styles.Line}
    d="M19 46L46 19"
    stroke="var(--global-foreground)"></path>
  <circle
    class={styles.InnerCircle}
    cx="32.5"
    cy="32.5"
    r="25.5"
    stroke="var(--global-foreground)"
    stroke-width="2"
    stroke-linecap="round"
    stroke-dasharray="2 4 6 8"></circle>
  <circle
    cx="32.5"
    cy="32.5"
    r="32"
    stroke="var(--global-foreground)"
    opacity="0.5"></circle>
</svg>

<script>
  const cursor: SVGElement | null = document.querySelector("[data-cursor]");

  const setProperty = (
    element: HTMLElement | SVGElement | null,
    property: string,
    value: string
  ) => {
    element?.style.setProperty(property, value);
  };

  document.addEventListener(
    "mousemove",
    (event) => {
      setProperty(cursor, "--x", `${event.pageX}px`);
      setProperty(cursor, "--y", `${event.pageY}px`);
      setProperty(cursor, "--opacity", "100%");
    },
    true
  );

  document.addEventListener(
    "mouseenter",
    (event: MouseEvent) => {
      const targetElementName =
        event.target instanceof HTMLElement && event.target?.nodeName;
      const isButtonOrAnchor =
        targetElementName === "BUTTON" || targetElementName === "A";

      if (isButtonOrAnchor) {
        setProperty(cursor, "--scale", "0.6");
        cursor?.setAttribute("data-hover-interaction", "true");
      }
    },
    true
  );

  document.addEventListener(
    "mouseleave",
    () => {
      setProperty(cursor, "--scale", "1");
      cursor?.setAttribute("data-hover-interaction", "false");
    },
    true
  );
</script>
