---
import Stack from "../stack/stack.astro";
import styles from "./social.module.css";

export type Props = {
  label: string;
  href: string;
  delay?: string;
};

const { label, href, delay = "0s" } = Astro.props;
---

<Stack
  class={styles.Social}
  as="a"
  target="_blank"
  rel="noopener noreferrer"
  rowGap="12px"
  hPadding="8px"
  vPadding="8px"
  hAlign="center"
  vAlign="start"
  inline
  href={href}
  style={{
    "--delay": delay,
  }}
>
  <slot name="icon" />
  <span class={styles.Label}>{label}</span>
</Stack>
