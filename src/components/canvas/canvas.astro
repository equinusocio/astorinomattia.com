---
const { class: className } = Astro.props;
---

<canvas class={className} id="canvas" width="2000" height="2000"></canvas>

<script is:inline src="https://unpkg.com/@rive-app/canvas@1.1.7"></script>
<script>
  const r = new rive.Rive({
    src: "/website_media.riv",
    canvas: document.getElementById("canvas"),
    autoplay: true,
    stateMachines: "mainSM",
    onLoad: () => {
      r.resizeDrawingSurfaceToCanvas();
    },
  });
</script>
