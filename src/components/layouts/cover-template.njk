<html lang="{{ config.lang }}" prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <link rel="alternate" type="application/rss+xml" title="{{ config.title }}" href="{{ config.url }}/feed.xml"/>
    {% include "meta.njk" %}
    <link rel="icon" href="/favicon.png" type="image/png"/>
    <link rel="preload" as="font" href="/fonts/ibarra400.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="/fonts/ibarra700.woff2" type="font/woff2" crossorigin="anonymous">
    <script src="/assets/js/app.js" defer></script>
    {% block head %}{% endblock %}
    <style>
      @font-face {
        font-family: 'Ibarra Real Nova';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src:
          local('Ibarra Real Nova Regular'),
          local('IbarraRealNova-Regular'),
          url('/fonts/ibarra400.woff2') format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }

      /* ibarra-real-nova-700 - latin */

      @font-face {
        font-family: 'Ibarra Real Nova';
        font-style: normal;
        font-weight: 700;
        font-display: swap;
        src:
          local('Ibarra Real Nova Bold'),
          local('IbarraRealNova-Bold'),
          url('/fonts/ibarra700.woff2') format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
      body {
        font-family: helvetica, arial, sans-serif;
        margin: 0;
        color: #fff;
        background-color: red;
        font-family: 'Ibarra Real Nova', serif;
      }

      .Cover {
        padding: 80px;
        width: 1200px;
        height: 630px;
        background-color: #08080C;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-image: url('https://cdn.glitch.com/67774d4a-1cf9-44c8-b0f4-171aa3e3d27a%2Fbg.svg?v=1582668883078');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: right top;
        box-sizing: border-box;
      }

      [data-title]{
        font-size: 3.5rem;
        margin-top: 60px;
        max-width: 18ch;
        margin-bottom: 0;
      }

      [data-title]::first-letter {
        text-transform: uppercase;
      }


    </style>
    <script>
      const urlParams = new URLSearchParams(window.location.search);
      const getSlug = urlParams.get('slug');
      const getDesc = decodeURIComponent(urlParams.get('desc'));

      const title = document.querySelector('[data-title]')
      const description = document.querySelector('[data-description]')
      const formattedSlug = getSlug.replace(/-/gi, ' ').concat('.');

      title.innerHTML = getSlug ? formattedSlug : 'You should not be here.';
    </script>
  </head>
  <body data-pageurl="{{page.url}}" data-controller="scrolles">
    <div class="Cover">
      <img width="100" height="100" src="https://cdn.glitch.com/67774d4a-1cf9-44c8-b0f4-171aa3e3d27a%2Flogo.png?v=1582668471452" />
      <h1 data-title>Sample Title</h1>
    </div>
  </body>
</html>
