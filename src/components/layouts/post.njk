{% extends 'layouts/base.njk' %}

{% block head %}
  {% if config.syntaxTheme %}
    <link rel="stylesheet" href="/assets/css/{{ config.syntaxTheme }}" />
  {% endif %}
{% endblock %}

{% block content %}
  <main tabindex="-1" class="BaseLayout">
    {% include "header.njk" %}
    <article class="PostContent">
      {% if title %}
        <h1>{{ title }}</h1>
      {% endif %}
      {{ content | safe }}
    </article>
  </main>
{% endblock %}
