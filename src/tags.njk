---
layout: page
metaTitle: Tag
description: Categories page description
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /blog/tag/{{ tag }}/
---
{% from "post-card.njk" import postCard %}

<h1 style="margin-bottom: 8px">#{{ tag }}</h1>
<small>{{ collections[tag].length }} posts published</small>

<section style="margin-top: 80px">
  <ol reversed>
    {% for post in collections[tag] %}
      {% if not loop.first %}
        <hr/>
      {% endif %}
      {{ postCard(post.url, post.data.title, post.date) }}
    {% endfor %}
  </ol>
</section>
