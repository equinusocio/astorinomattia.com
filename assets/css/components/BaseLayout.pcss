.BaseLayout {
  padding: 32px 16px;

  @media (width >= 48em) {
    padding: 40px 64px;
    max-width: 1440px;
    margin: 0 auto;
  }

  &[data-display='grid'] {
    display: grid;

    @media (width >= 60em) {
      grid-template-columns: 45% 1fr;
    }
  }
}

.BaseLayout__LeftSide {
  margin-bottom: 80px;
  padding-left: 24px;
  padding-right: 24px;

  @media (width >= 48em) {
    padding-left: 0;
  }

  @media (width >= 60em) {
    margin-bottom: 0;
  }
}

.BaseLayout__RightSide {

  @media (width >= 60em) {
    padding-left: 24px;
  }
}


.BaseLayout__Sticker {

  @media (width >= 60em) {
    position: sticky;
    top: 40px;
    padding-right: 40px;
  }
}
